generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Boards {
  id    String     @id 
  name  String?
  description String
  tasks Tasks[]
}

model Tasks {
  id        Int     @id @default(autoincrement())
  title     String
  type   String
  description String
  board     Boards    @relation(fields: [boardId], references: [id])
  boardId  String
}